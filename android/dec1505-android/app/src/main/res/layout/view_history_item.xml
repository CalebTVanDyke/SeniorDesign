<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@drawable/divider"></FrameLayout>

    <edu.iastate.ece.sd.dec1505.views.ListHeaderView
        android:id="@+id/history_item_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"></edu.iastate.ece.sd.dec1505.views.ListHeaderView>

<LinearLayout
    android:id="@+id/list_item_text_wrapper"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height_small"
    android:layout_weight="1"
    android:clickable="false"
    android:orientation="horizontal"
    android:padding="0dp">

    <TextView
        android:id="@+id/time_header_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/padding_small"
        android:text="12:00:00 AM"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/gray"
        android:visibility="visible" />

    <TextView
        android:id="@+id/spo2_header_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="SPO2"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="visible" />


    <TextView
        android:id="@+id/heart_header_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="heart"
        android:gravity="center"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="visible" />

    <TextView
        android:id="@+id/temp_header_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:text="temp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="visible" />

</LinearLayout>
</LinearLayout>