<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_layout_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_list_item"
    android:minHeight="@dimen/list_item_height"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/list_item_text_wrapper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height_small"
        android:layout_weight="1"
        android:clickable="false"
        android:orientation="vertical">


        <TextView
            android:id="@+id/time_hist_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/padding_medium"
            android:text="SPO2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/gray"
            android:visibility="visible" />

        <TextView
            android:id="@+id/spo2_hist_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="@dimen/padding_large"
            android:text="SPO2"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:visibility="visible" />


        <TextView
            android:id="@+id/heart_hist_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="heart rate"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:visibility="visible" />

        <TextView
            android:id="@+id/temp_hist_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:paddingRight="@dimen/padding_large"
            android:text="Temp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>
